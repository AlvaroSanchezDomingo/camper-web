<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    {{#each parkings}}
        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-1@s uk-margin" uk-grid>
            <div>
                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                        <div class="uk-width-auto">
                            {{#if (eq category 'Nature')}}
                                <i class="fas fa-tree fa-2x" style="color:rgb(49,78,0)"></i>
                            {{/if}}
                            {{#if (eq category 'Public')}}
                                <i class="fas fa-parking fa-2x" style="color:rgb(21,57,177)"></i>
                            {{/if}}
                            {{#if (eq category 'Private')}}
                                <i class="fas fa-parking fa-2x" style="color:rgb(177,21,21)"></i>
                            {{/if}}
                            {{#if (eq category 'Camping')}}
                                <i class="fas fa-campground fa-2x" style="color:rgb(217,238,33)"></i>
                            {{/if}}
                            <p class="uk-text-meta uk-margin-remove-top">{{category}}</p>
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title uk-margin-remove-bottom">{{name}}</h3>
                            <p class="uk-text-meta uk-margin-remove-top">{{user.firstName}} {{user.lastName}}</p>
                        </div>
                        <div class="uk-width-auto">
                            <i class="fas fa-search-location fa-2x" style="color:rgb(44,97,1)"></i>
                            <p class="uk-text-meta uk-margin-remove-top">{{lat}} , {{long}}</p>
                        </div>
                    </div>
                </div>
                <div class="uk-card-body">
                    <p class= "uk-text-success">{{pros}}</p>
                    <p class= "uk-text-danger">{{cons}}</p>
                </div>

                <div class="uk-card-footer">
                    <p uk-margin>
                        <a href="/viewparking/{{_id}}" class="uk-button uk-button-primary uk-button-small" uk-icon="sign-in"></a>
                    </p>
                </div>
            </div>
        </div>
    {{/each}}
</div>
