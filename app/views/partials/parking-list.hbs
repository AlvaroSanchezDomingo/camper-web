<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    {{#each parkings}}
        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
            <div class="uk-flex-last@s uk-card-media-right uk-cover-container">
                <img src="images/camper2.png" alt="" uk-cover>
                <canvas width="500" height="400"></canvas>
            </div>
            <div>
                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                        <div class="uk-width-auto">
                            <img class="uk-border-circle" width="40" height="40" src="images/camper2.png">
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title uk-margin-remove-bottom">{{name}}</h3>
                            <p class="uk-text-meta uk-margin-remove-top">{{user.firstName}} {{user.lastName}}</p>
                        </div>
                    </div>
                </div>
                <div class="uk-card-body">
                    <p class= "uk-align-left">Pros: {{pros}}</p>
                </div>
                <div class="uk-card-body">
                    <p class= "uk-align-left">Cons: {{cons}}</p>
                </div>
                <div class="uk-card-footer">
                    <p uk-margin>
                        <button class="uk-button uk-button-default uk-button-small">View</button>
                        <button class="uk-button uk-button-primary uk-button-small">Edit</button>
                        <button class="uk-button uk-button-secondary uk-button-small">Delete</button>
                    </p>
                </div>
            </div>
        </div>
    {{/each}}
</div>
